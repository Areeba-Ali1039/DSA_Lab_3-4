#include <iostream>
using namespace std;
int generateCode(int n) {
    int result = 1;
    for (int i = n; i > 0; i--) {
        result *= i;
    }
    return result;
}

int main() {
    int n;
    cout << "Enter a number: ";
    cin >> n;
    int (*codePtr)(int);
    codePtr = generateCode;
    int secretCode;
    if (n == 0) {
        secretCode = 1;
    } else {
        secretCode = codePtr(n);
    }

    cout << "Your secret code is: " << secretCode << endl;

    return 0;
}
