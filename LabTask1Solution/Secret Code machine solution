#include <stdio.h>
#include<iostream>
using namespace std;
// Factorial function
unsigned long long factorial(int n) {
    if (n <= 1) return 1;

    unsigned long long result = 1;
    for (int i = n; i > 1; i--) {
        result *= i;
    }
    return result;
}

int main() {
    int input;
    // Declare a function pointer that points to a function taking int and returning unsigned long long
    unsigned long long (*func_ptr)(int);

    // Assign the factorial function to the function pointer
    func_ptr = factorial;

    printf("Enter the input number: ");
    if (scanf("%d", &input) != 1 || input < 0) {
        printf("Invalid input! Please enter a non-negative integer.\n");
        return 1;
    }

    // Call the factorial function through the function pointer
    unsigned long long secret_code = func_ptr(input);

    printf("Secret code: %llu\n", secret_code);

    return 0;
}
